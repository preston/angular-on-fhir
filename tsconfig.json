{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "build",
        "rootDir": "src"
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "bower_components",
        "typings/globals",
        "typings/index.d.ts"
    ],
    "filesGlob": [
        "src/**/*.ts"
    ]
}
